<div class="login-imagen-de-fondo" style="background-image: url(<%= asset_path("viajero.jpg")%>)">
  <div class="login-contenedor">
    <!-- Secci贸n de la imagen con texto -->
    <div class="login-left-section">
      <h1>Tu frase inspiradora</h1>
      <p>Una breve descripci贸n o mensaje motivador que aparezca en la secci贸n izquierda.</p>
    </div>
    <!-- Secci贸n del formulario -->
    <div class="login-right-section">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="login-form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
