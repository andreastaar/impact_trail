<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1 class="display-4 mb-4">Ofertas Disponibles</h1>
    </div>
  </div>


      <% if @offers.any? %>
        <div class="list-group mt-4">
          <% @offers.each do |offer| %>
            <div class="list-group-item">
              <h4><%= link_to offer.title, offer_path(offer) %></h4>
              <%= (Review.where(organization_id: offer.user_id).map(&:rating).sum / Review.where(organization_id: offer.user_id).map(&:rating).count).round(1)%>
              <p class="text-muted">Ubicación: <%= offer.address %></p>
              <p class="text-muted">Disponibilidad: <%= offer.availability %> puestos</p>
              <p class="text-secondary mt-2"><%= truncate(offer.description, length: 100) %></p>
              <div class="mt-auto">
                <%= link_to 'Ver más', offer_path(offer), class: 'btn btn-outline-primary mt-3' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="row">
      <div class="col-md-12 text-center">
        <p class="text-muted mt-4">No hay ofertas disponibles en este momento.</p>
      </div>
    </div>
  <% end %>

  <% if current_user&.role == "organización" %>
    <div class="row">
      <div class="col-md-12 text-center">
        <%= link_to 'Nueva Oferta', new_offer_path, class: 'btn btn-primary mt-4' %>
      </div>
    </div>
  <% end %>
</div>
