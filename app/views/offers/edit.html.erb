<h1>Edit Offer</h1>

<%= form_with model: @offer, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :requirements %>
    <%= form.text_area :requirements, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :availability %>
    <%= form.number_field :availability, class: 'form-control' %>
  </div>
  <%= form.submit 'Update Offer', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Offers', offers_path, class: 'btn btn-secondary' %>
