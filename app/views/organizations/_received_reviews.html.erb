<div class="container">

<div class="row">
<div class="col-xs-4">

<% if @reviews.any? %>
  <% @reviews.each do |review| %>
  <div class="rating">
    <%= cl_image_tag review.user.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face, class: 'img-fluid product-image avatar' %>
    <%= review.rating %>
  </div>
  <%= review.content  %>
  <% end %>
<% else %>
  <p>No tiene reviews registradas.</p>
<% end %>

</div>
</div>
</div>
