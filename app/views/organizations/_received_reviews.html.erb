<div class="container">

<div class="row">
<div class="col-xs-4">

<% if @reviews.any? %>
  <% @reviews.each do |review| %>
<div class="d-flex">
  <div class="rating pt-2">
      <%= cl_image_tag review.user.photo.key, width: 250, height: 250, crop: :thumb, gravity: :face, class: 'img-fluid product-image avatar' %>
  </div>
  <div class="rating">
    <ul>
      <i><%= review.rating %></i>
      <br>
      <i><%= review.content  %></i>
    </ul>
  </div>
</div>

  <% end %>
<% else %>
  <p>No tiene reviews registradas.</p>
<% end %>
</div>
</div>
</div>
