<h1>Crear una nueva review</h1>

<%= form_with(model: [@offer, @review], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :rating, "Rating (Califica de 1 a 5)" %>
    <%= form.number_field :rating, in: 1..5, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :content, "Review" %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group mt-4">
    <%= form.submit "Enviar Review", class: 'btn btn-primary' %>
  </div>
<% end %>

<%# hacer ruta que lleve a los reviews de la organizacion %>
<%= link_to offers_path, class: 'btn btn-secondary' %>
