<h1>Crear una nueva review</h1>

<%= form_with(model: [@offer, @review], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :rating, "Califica tu experiencia" %>
    <%= form.number_field :rating, in: 1..5, class: 'form-control',input_html: {data: {controller: "star-rating"}} %>
  </div>
  <div class="form-group mt-3">
    <%= form.label :content, "Review" %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group mt-4">
    <%= form.submit "Enviar Review", class: 'btn btn-primary' %>
  </div>
<% end %>
