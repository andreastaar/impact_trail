  </div>

  <div class="text-center">
    <h2 class=>¿Te Gustaría Unirte a Nuestra Familia de Voluntarios?</h2>
    <%= simple_form_for [@offer, @application] do |f| %>
      <div class="form-group">
        <%= f.input :status, :as => :hidden %>
      </div>
      <div class="form-group mt-4">
        <%= f.submit "Deseo ser Voluntario", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
